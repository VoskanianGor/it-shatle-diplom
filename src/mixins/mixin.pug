mixin ul(link)
    li.nav__item
        a.nav__link(href=link+".html")=link


mixin button(btnTitle, btnClass='')
    button(class="button " + "button-"+btnClass)=btnTitle


mixin accordItems(title, descr)
    h5.uptitle(class="uptitle-accord")=title
    p.description(class="description-accord")=descr


mixin oval(ovalClass)
    div.oval(class="oval-"+ovalClass)
    

mixin galleryTitles(item)
    h5.uptitle(class="uptitle-gallery")=item

mixin galleryCard(src, title, desc)
    .gallery-card
        img.gallery-card__img(src=src, alt="abstract image")
        .gallery-card__info
            .h4(class="h4-gallery-card")=title
            .description=desc

mixin featuresCard(src, title, desc)
    .features-card
        img.features-card__img(src=src, alt="features icon")
        .h4(class="h4-features-card")=title
        .description=desc

mixin reviewsCard(src, desc, name)
    .reviews-card 
        img.reviews-card__img(src=src, alt="reviewer icon")
        .description(class="reviews-card__decription")=desc
        .description(class="reviews-description")=name

mixin reviewsClients(val)
    img.logo(src=`../assets/images/reviews${val}.png`)